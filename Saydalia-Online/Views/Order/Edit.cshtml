@model Order
@{
	ViewData["Title"] = "Edit";

}


<div class="bg-light py-3">
	<div class="container">
		<div class="row">
			<div class="col-md-12 mb-0">
				<a href="/">Home</a> <span class="mx-2 mb-0">/</span>
				<strong class="text-black">Cart</strong>
			</div>
		</div>
	</div>
</div>

<div class="site-section">
	<div class="container">

		@if (Model.OrderItems.Count() > 0)
		{
			<div class="row mb-5">
				<div class="col-md-12" method="post">
					<div class="site-blocks-table">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th class="product-thumbnail">Image</th>
									<th class="product-name">Product</th>
									<th class="product-price">Price</th>
									<th class="product-quantity">Quantity</th>
									<th class="product-total">Total</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model.OrderItems)
								{
									<tr>
										<td class="product-thumbnail">
											<img src="~/files/images/@item.Medicine.ImageName" alt="Image" class="img-fluid">
										</td>
										<td class="product-name">
											<h2 class="h5 text-black">@item.Medicine.Name</h2>
										</td>
										<td>$@item.Medicine.Price</td>
										<td>@item.Quantity</td>
										<td>$@item.Price</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>

		}
		<form asp-action="UpdateStatus" asp-controller="Order" method="post">
			<div class="row">
				<div class="col-md-6">
					<div class="row">
						<div class="col-md-12">
							<div class="row">
								<div class="col-md-12 text-left border-bottom">
									<h3 class="text-black h4 text-uppercase">Deleivring Information</h3>
								</div>
							</div>

							<div class="row mb-5">
								<div class="col-md-12">
									<label class="form-label mt-2">Address</label>
									<p class="form-control form-control-lg">@Model.Address</p>
								</div>
								<div class="col-md-12">
									<label class="form-label mt-2">Phone</label>
									<p class="form-control form-control-lg">@Model.Phone</p>
								</div>
								<div class="col-md-12">
									<label class="form-label mt-2">Status</label>
									<p class="form-control form-control-lg">@Model.Status</p>
								</div>

							</div>
						</div>
					</div>
				</div>

				<div class="col-md-6  pl-5">
					<div class="row justify-content-end">
						<div class="col-md-7">
							<div class="row">
								<div class="col-md-12 text-left border-bottom mb-5">
									<h3 class="text-black h4 text-uppercase">Cart Totals</h3>
								</div>
							</div>

							<div class="row mb-5">
								<div class="col-md-6">
									<span class="text-black">Total</span>
								</div>
								<div class="col-md-6 text-right">
									<strong class="text-black">$ @Model.TotalAmount</strong>
								</div>
							</div>


							<div class="row">
								@if (!(@Model.Status == "Rejected" || @Model.Status == "Canceled"))
								{
									<div class="col-md-12">
										<input asp-for="Id" hidden />
										<select asp-for="Status" class="form-control form-control-lg">
											<option value="InTransit">In Transit</option>
											<option value="Canceled">Canceled</option>
											<option value="Rejected">Rejected</option>
											<option value="Delivered">Delivered</option>
										</select>
									</div>
									<div class="col-md-12 mt-3">
										<button type="submit" class="btn btn-primary btn-lg btn-block">Update Status</button>
									</div>
								}

							</div>
						</div>
					</div>

				</div>

			</div>
		</form>

	</div>
</div>

