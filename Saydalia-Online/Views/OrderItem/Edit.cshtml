@model OrderItem


<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/">Home</a> <span class="mx-2 mb-0">/</span> <a asp-action="Store" asp-controller="Home">Store</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@Model.Medicine.Name</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 mr-auto">
                <div class="border text-center">
                    <img src="~/files/images/@Model.Medicine.ImageName" class="card-img-top img-fluid mb-3" style="max-height:300px; max-width:250px;" alt="@Model.Medicine.Name">
                </div>
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <h2 class="text-black">@Model.Medicine.Name</h2>
                <p>@Model.Medicine.Description</p>
                <p>Left in Stock: @Model.Medicine.Stock</p>
                <p>Price: $@Model.Medicine.Price</p>

                <p>
                    <form method="post" asp-action="Update" asp-controller="OrderItem" enctype="multipart/form-data">
                        <div asp-validation-summary="All"></div>
                        <div class="mb-5 d-flex align-items-center">
                            <input type="number" class="form-control text-center" value=@Model.Quantity placeholder=""
                                    aria-label="Example text with button addon" aria-describedby="button-addon1"
                                    min="1" max="@(Model.Medicine.Stock+Model.Quantity)" name="quantity" required style="max-width: 100px;">
                            <input type="hidden" name="itemId" value="@Model.Id" />
                            <input type="submit" value="Update" class="btn btn-primary ml-2" />
                        </div>
                    </form>
                </p>
            </div>
        </div>
    </div>
</div>
