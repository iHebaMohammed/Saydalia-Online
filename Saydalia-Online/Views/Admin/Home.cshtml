@model Medicine
@{
    ViewData["Title"] = "Create New Medicine";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center text-info mb-4">List of Medicine</h1>
            <div class="d-flex justify-content-between mb-4">
                <a class="btn btn-primary" asp-controller="Admin" asp-action="Add">
                    <i class="bi bi-plus"></i> Add New Medicine
                </a>
                <div class="input-group" style="max-width: 300px;">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="searchInput">
                            <i class="bi bi-search"></i> Search
                        </label>
                    </div>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search...">
                </div>
            </div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.ImageName)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Categories)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Stock)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @*         @foreach(var item in Model)
                    { *@
                    <tr>
                        <td class="align-middle">1</td>
                        <td class="align-middle">Image</td>
                        <td class="align-middle" style="width:300px;">Name</td>
                        <td class="align-middle">Description</td>
                        <td class="align-middle">Categories</td>
                        <td class="align-middle" style="width:150px;">Price</td>
                        <td class="align-middle" style="width:150px;">Stock</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" @* asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id" *@>
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-outline-success" @* asp-controller="Admin" asp-action="Details" asp-route-id="@item.Id" *@>
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a class="btn btn-outline-danger" @* asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id" *@>
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                    @* } *@
                </tbody>
            </table>
        </div>
    </div>
</div>
